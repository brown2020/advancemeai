rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(ownerId) {
      return request.auth != null && ownerId != null && request.auth.uid == ownerId;
    }

    function isLegacyPublic(data) {
      return !data.keys().hasAny(["isPublic"]);
    }

    function isPublicContent(data) {
      return data.isPublic == true || isLegacyPublic(data);
    }

    function canReadContent(data) {
      return isPublicContent(data) || isOwner(data.userId);
    }

    function ownsIncomingResource() {
      return isAuthenticated() &&
        request.resource.data.userId == request.auth.uid;
    }

    match /flashcardSets/{setId} {
      allow read: if canReadContent(resource.data);
      allow create: if ownsIncomingResource();
      allow update, delete: if isOwner(resource.data.userId);
    }

    match /practiceAttempts/{attemptId} {
      allow create: if isAuthenticated()
        && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isOwner(resource.data.userId);
    }

    match /quizzes/{quizId} {
      allow read: if canReadContent(resource.data);
      allow create: if ownsIncomingResource();
      allow update, delete: if isOwner(resource.data.userId);
    }

    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // User profiles - public read, owner write
    match /userProfiles/{userId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Study groups / Classes
    match /studyGroups/{groupId} {
      // Allow read if user is owner, member, or admin
      allow read: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in resource.data.memberIds ||
        request.auth.uid in resource.data.adminIds ||
        resource.data.isPublic == true
      );
      
      // Allow create if user sets themselves as owner
      allow create: if isAuthenticated() && 
        request.resource.data.ownerId == request.auth.uid;
      
      // Allow update/delete if owner or admin
      allow update, delete: if isAuthenticated() && (
        resource.data.ownerId == request.auth.uid ||
        request.auth.uid in resource.data.adminIds
      );
    }

    // Flashcard folders
    match /flashcardFolders/{folderId} {
      allow read: if canReadContent(resource.data);
      allow create: if ownsIncomingResource();
      allow update, delete: if isOwner(resource.data.userId);
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}

